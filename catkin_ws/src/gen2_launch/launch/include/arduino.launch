<!--
Author: Brian Pappas
Last Update: 8-1-2013
Description:  Launches the rosserial node that allows the encoder/sensor messages
generated by the Arduino to be accessed in ROS
-->

<launch>
	<!-- Launch the serial node to communicate with the arduino -->
	<node name="serial_node" pkg="rosserial_python" type="serial_node.py">
		<!-- Specify USB port connected to arduino -->
		<param name="port" value="/dev/ttyACM0" type="str" />
	</node>
</launch>
